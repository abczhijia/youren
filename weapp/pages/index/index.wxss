/**index.wxss**/
.index-block {
  background-color: #fff;
  margin-bottom: 80rpx;
}
.index-username {
  display: flex;
  align-items: center;
  font-size: 48rpx;
  font-weight: bold;
  height: 100rpx;
  margin-left: 20rpx;
}

.index-searchbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 20rpx;
}

.index-search {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 4px;
  background-color: #efefef;
  color: #888;
  flex: 1;
  font-size: 16px;
  height: 60rpx;
}

.index-scanner {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}

.index-modules{
  display: flex;
  flex-wrap: wrap;
  color: #555;
  margin: 30rpx 20rpx;
  padding-bottom: 20rpx;
}

.index-module {
  width: 25%;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.index-module-image {
  width: 60rpx;
  height: 60rpx;
}

.index-module-text{
  font-size: 12px;
  margin-top: 6px;
}

.index-activity {
  border-bottom: 1px solid #efefef;
  margin-left: 20rpx;
}

.index-activity:last-child {
  border-bottom: none;
}

